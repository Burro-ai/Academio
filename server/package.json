{
  "name": "academio-server",
  "version": "0.1.0",
  "description": "Academio Backend Server",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test:rag": "tsx src/utils/test-rag-injection.ts --no-cleanup",
    "test:rag:clean": "tsx src/utils/test-rag-injection.ts",
    "test:rag:phase1": "tsx src/utils/test-rag-injection.ts --phase 1 --no-cleanup",
    "test:rag:phase2": "tsx src/utils/test-rag-injection.ts --phase 2",
    "test:rag:phase3": "tsx src/utils/test-rag-injection.ts --phase 3",
    "memory:reset": "tsx src/utils/resetMemory.ts --all",
    "memory:verify": "tsx src/utils/resetMemory.ts --verify",
    "create:test-students": "tsx src/utils/create-test-students.ts",
    "test:auth": "tsx src/utils/verify-auth-integrity.ts"
  },
  "dependencies": {
    "bcryptjs": "^3.0.3",
    "better-sqlite3": "^11.6.0",
    "chromadb": "^1.10.5",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.21.0",
    "jsonwebtoken": "^9.0.3",
    "multer": "^1.4.5-lts.1",
    "pdf-parse": "^1.1.1",
    "sharp": "^0.33.5",
    "uuid": "^10.0.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/better-sqlite3": "^7.6.11",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/multer": "^1.4.12",
    "@types/node": "^22.7.4",
    "@types/uuid": "^10.0.0",
    "tsx": "^4.19.1",
    "typescript": "^5.6.2"
  }
}
